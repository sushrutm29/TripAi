<%- include('partials/header'); %>
<%- include('partials/navbar'); %>

<div class="container mt-5">
  <h1 class="text-center mb-4">My Trips</h1>

  <% if (trips.length > 0) { %>
    <div class="row">
      <% trips.forEach(trip => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= trip.destination %></h5>
              <p class="card-text"><strong>Origin:</strong> <%= trip.origin %></p>
              <p class="card-text"><strong>Planned on:</strong> <%= new Date(trip.travelDates[0]).toLocaleDateString() %></p>
              <a href="/trip/<%= trip._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p class="text-center">You have not planned any trips yet.</p>
  <% } %>

  <h2 class="text-center mt-5 mb-4">Recommended Trips</h2>

  <% if (recommendations.length > 0) { %>
    <div class="row">
      <% recommendations.forEach(trip => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= trip.destination %></h5>
              <p class="card-text"><strong>Origin:</strong> <%= trip.origin %></p>
              <p class="card-text"><strong>Planned on:</strong> <%= new Date(trip.travelDates[0]).toLocaleDateString() %></p>
              <a href="/trip/<%= trip._id %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p class="text-center">No recommendations available.</p>
  <% } %>
</div>

<%- include('partials/footer'); %>